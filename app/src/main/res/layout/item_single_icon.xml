<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/iconLay1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_person1" />

        <TextView
            android:id="@+id/iconTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iconLay2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconImage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_person1" />

        <TextView
            android:id="@+id/iconTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iconLay3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconImage3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_person1" />

        <TextView
            android:id="@+id/iconTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone" />
    </LinearLayout>

</LinearLayout>